
{
  "name": "realty-social-packager-fullstack",
  "version": "1.0.0",
  "description": "Realty Social Packager with a Node.js backend",
  "main": "server/server.ts",
  "scripts": {
    "build:frontend": "tsc -p ./tsconfig.json",
    "watch:frontend": "tsc -w -p ./tsconfig.json",
    "build:server": "tsc -p ./server/tsconfig.json",
    "start:server": "node server/dist/server.js",
    "dev:server": "nodemon",
    "dev": "concurrently --kill-others-on-fail \"npm:watch:frontend\" \"wait-on ./dist_frontend/index.js && npm:dev:server\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^0.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase": "^10.12.2",
    "firebase-admin": "^12.2.0",
    "mongodb": "^6.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-easy-crop": "^2.0.0",
    "@types/file-saver": "^2.0.7",
    "@types/jszip": "^3.4.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  },
  "nodemonConfig": {
    "watch": ["server"],
    "ext": "ts,json",
    "ignore": ["server/dist"],
    "exec": "ts-node ./server/server.ts"
  }
}
